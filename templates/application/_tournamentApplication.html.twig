

<table class="table ">

    {% for invitation in var  %}
        {% if invitation.isActive == 1 %}
        {% if invitation.isApplication == application %}
            <tr>
                <td>{{invitation.applicatedAt | date('d-m-y')}}</td>
                <td>{{invitation.tournament.name}}</td>
                <td>
                    {{invitation.message}}
                </td>
                <td> 
                    <a href="{{path('tournament_application_accept',{'id':invitation.id})}}" class="btn btn-primary"><i class="fas fa-check"></i></a>
                    <a href="{{path('tournament_application_refuse',{'id':invitation.id})}}" class="btn btn-danger"><i class="fas fa-times"></i></a>
                </td>
            </tr>
     
        {% endif %}
        {% endif %}
     {% endfor %}
</table>
